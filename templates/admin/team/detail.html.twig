{% extends '@EasyAdmin/crud/detail.html.twig' %}
{% block page_title %}{{ entity.instance.name }}{% endblock %}
{% block main %}
{#    {{ parent() }}#}
    <h2>Members</h2>
    <table class="table">
        <thead class="tab-header">
            <tr>
                <th>Number</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for member in entity.instance.members %}
                <tr>
                    <td>{{ member.number }}</td>
                    <td>{{ member.firstname }}</td>
                    <td>{{ member.lastname }}</td>
                    <td>{{ member.status }}</td>
                    <td>
{#                        <a href="{{ path('member_show', { 'id': member.id }) }}">show</a>#}
{#                        <a href="{{ path('member_edit', { 'id': member.id }) }}">edit</a>#}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
