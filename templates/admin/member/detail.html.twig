{% extends '@EasyAdmin/crud/detail.html.twig' %}
{% block page_title %}{{ entity.instance.fullName }} ({{ entity.instance.number }}){% endblock %}
{% block main %}
    <!-- Custom content goes here -->
    <hr>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">{{ 'Member Details'|trans }}</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">{{ 'Full Name'|trans }}</dt>
                                <dd class="col-sm-8">{{ entity.instance.fullName }}</dd>
                                <dt class="col-sm-4">{{ 'Email'|trans }}</dt>
                                <dd class="col-sm-8">{{ entity.instance.email }}</dd>
                                <dt class="col-sm-4">{{ 'Phone'|trans }}</dt>
                                <dd class="col-sm-8">{{ entity.instance.phone }}</dd>
                                <dt class="col-sm-4">{{ 'Address'|trans }}</dt>
                                <dd class="col-sm-8">
                                    {% if entity.instance.address is defined and entity.instance.address is not null %}
                                        {{ entity.instance.address.street }}
                                        {{ entity.instance.address.suffix }}
                                        {{ entity.instance.address.city }}
                                        {{ entity.instance.address.postalCode }}
                                        {{ entity.instance.address.country }}
                                    {% endif %}
                                </dd>
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">{{ entity.instance.status }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <h2>Payments</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{ 'Year'|trans }}</th>
            <th scope="col">{{ 'Amount'|trans }}</th>
            <th scope="col">{{ 'Currency'|trans }}</th>
            <th scope="col">{{ 'Method'|trans }}</th>
            <th scope="col">{{ 'Created At'|trans }}</th>
            <th scope="col">{{ 'Comment'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in entity.instance.payments %}
            <tr>
                <td>{{ payment.year }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.currency }}</td>
                <td>{{ payment.method }}</td>
                <td>{{ payment.createdAt|date('D, d M Y H:i:s') }}</td>
                <td>{{ payment.comment }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

